#!/usr/bin/env bash

set -e

BIN_PATH="$1/bin"
TMP_PATH="$1/tmp"
mkdir -p $BIN_PATH $TMP_PATH

# Binary location
BIN_DIR=$(cd $(dirname $0); pwd) # absolute path
OPT_DIR=$(cd "$BIN_DIR/../opt"; pwd)



WKHTMLTOPDF_PKG="$OPT_DIR/wkhtmltopdf.tar.xz"
WKHTMLTOPDF_PATH="$OPT_DIR/wkhtmltox"
WKHTMLTOPDF_BINARIES="$WKHTMLTOPDF_PATH/bin"


echo "-----> Unpacking Debian package"
tar -xJf $WKHTMLTOPDF_PKG

echo "-----> Setting permissions"
chmod +x $WKHTMLTOPDF_BINARIES/bin/*

echo "-----> Moving binaries to the right place"
cp $WKHTMLTOPDF_BINARIES/bin/* $BIN_PATH/

exit 0